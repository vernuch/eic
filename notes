private fun loadTasks() {
        lifecycleScope.launch {
            activeTasks = taskDao.getActiveTasks()
            archivedTasks = taskDao.getArchivedTasks()
            if (showingActive) showActiveTasks() else showArchivedTasks()
        }
    }